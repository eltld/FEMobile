<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
   
    <include
      
        layout="@layout/header" />
    
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_text" 
        android:layout_below="@+id/header_carrera">

      <ProgressBar
            android:id="@+id/marker_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:progressDrawable="@drawable/animate_rotate" >
        </ProgressBar>
          <TextView
            android:id="@+id/text_galleryConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_noticiaContentTitulo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:text="Bajada"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:typeface="sans" />

<GridView 
    android:id="@+id/grid_gallery_image"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:horizontalSpacing="4dip"
    android:numColumns="3"
    android:stretchMode="columnWidth"
    android:verticalSpacing="4dip"
    android:padding="4dip" />
</RelativeLayout>
</RelativeLayout>