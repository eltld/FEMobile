
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    
 <ImageView
     android:id="@+id/image_principal"
     android:layout_width="200dp"
     android:layout_height="80dp"
     android:layout_marginLeft="40dp"
     android:layout_marginTop="30dp"
     android:contentDescription="@string/descripcion"
     android:src="@drawable/logomovila2" />
 
 
  <ScrollView
     android:id="@+id/scro1"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/image_principal"
     android:layout_marginTop="10dp" 
     android:fillViewport="true">

   <RelativeLayout   
   android:layout_width="match_parent"
  android:layout_height="wrap_content"
  >
   <com.feunju.bean.util.ScrollableGridView
         android:id="@+id/grid_principal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="6dp"
         android:columnWidth="80dp"
         android:gravity="center"
         android:numColumns="auto_fit"
         android:stretchMode="columnWidth" 
         android:layout_marginBottom="40dp"
         android:scrollbars="none"
        />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="false"
       android:layout_below="@+id/grid_principal"
       android:layout_marginTop="30dp"
       android:background="@color/black"
       android:gravity="center" >

       <ImageView
           android:id="@+id/image_navigator"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:layout_marginLeft="69dp"
           android:src="@drawable/mundo" />

       <ImageView
           android:id="@+id/image_about"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_alignParentRight="true"
           android:layout_alignTop="@+id/image_navigator"
           android:layout_marginRight="58dp"
           android:src="@drawable/informacion" />

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/textView2"
           android:layout_alignBottom="@+id/textView2"
           android:layout_alignParentRight="true"
           android:layout_marginRight="35dp"
           android:text="InformaciÃ³n"
           android:textColor="@color/blanco"
           android:textStyle="bold"
           android:typeface="normal"
           android:layout_marginTop="1dp" />
         
           <!--  
           android:layout_alignRight="@+id/image_navigator"
           android:layout_below="@+id/image_navigator"
           android:gravity="center_horizontal"
           android:text="Sitio Web"
           android:textColor="@color/blanco"
           android:textColorLink="@color/gray_claro"
           android:textStyle="bold" />
           -->

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/image_navigator"
           android:layout_marginLeft="40dp"
           android:gravity="center_horizontal"
           android:text="www.unju.edu.ar"
           android:textColor="@color/blanco"
           android:textColorLink="@color/gray_claro"
           android:textStyle="bold" />

  </RelativeLayout>
</RelativeLayout>  
    
</ScrollView>

  <TextView
      android:id="@+id/textView1"
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/image_principal"
      android:layout_marginTop="10dp"
      android:background="#555" />

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/textView1"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:background="@color/header_principal" >

  </RelativeLayout>

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/textView1"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true" >

      <ImageView
          android:id="@+id/image_comedorContentUbicacion"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:src="@drawable/logomovila2" />

  </RelativeLayout>
  
</RelativeLayout>

