<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />
        
      <RelativeLayout
          android:id="@+id/content"
          android:layout_width="fill_parent"
          android:layout_height="match_parent"
          android:layout_below="@+id/header_carrera"
          android:background="@color/header_text" >

       <TextView
              android:id="@+id/text_carreraFiltro"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:paddingLeft="10dp"
             
              android:paddingBottom="10dip"
              android:paddingTop="10dip"
              android:text="@string/version_unju"
              android:textSize="20dp"
              android:textStyle="bold"
              android:typeface="serif" />
         

          <ListView
              android:id="@+id/list_sobre"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/text_carreraFiltro"
              android:background="#DDD1E7"
              android:divider="@color/gray"
              android:dividerHeight="0.1dp" >
          </ListView>

    </RelativeLayout>

 
    
</RelativeLayout>